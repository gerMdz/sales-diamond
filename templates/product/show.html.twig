{% extends 'admin/bars.html.twig' %}

{% block title %}Producto vista{% endblock %}

{% block contenpage %}
    <h1>Producto vista</h1>

    <table class="table">
        <tbody>
        {% if(is_granted('ROLE_SUPERVISOR_VENTAS')) %}
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Título</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Identificador</th>
                <td>{{ product.identifier }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ product.isAvailable ? 'Si' : 'No' }}</td>
            </tr>
            <tr>
                <th>Disponible para la venta</th>
                <td>{{ product.isForSale ? 'Si' : 'No' }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">Listado</a>
    {% if(is_granted('ROLE_SUPERVISOR_VENTAS')) %}
    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Editar</a>
    {% endif %}

{#    {{ include('product/_delete_form.html.twig') }}#}
{% endblock %}
