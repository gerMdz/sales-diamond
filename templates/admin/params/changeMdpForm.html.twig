{% extends 'admin/bars.html.twig' %}

{% block contenpage %}
    {% set user= app.user %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Cambiar Contraseña</h3>
            </div>

        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Cambiar la contraseña  para el usuario {{ user.nombreCompleto | upper }}</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {{ form_start(passwordForm) }}
                        {{ form_widget(passwordForm) }}
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="submit" name="valider" class="btn btn-success">Actualizar</button>
                                <a class="btn btn-warning" href="{{ path('app_admin_index') }}">Cancelar</a>

                            </div>
                        </div>
                        {{ form_end(passwordForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
