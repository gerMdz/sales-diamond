{% extends 'base.html.twig' %}

{% block title %}Roles Listado{% endblock %}

{% block body %}
    <h1>Roles listado</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Identificador</th>
                <th>Descripci√≥n</th>
                <th>Activo?</th>
                <th><i class="fa fa-cogs"></i> </th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.nombre }}</td>
                <td>{{ role.identificador }}</td>
                <td>{{ role.descripcion }}</td>
                <td>{{ role.isActivo ? 'Si' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_roles_show', {'id': role.id}) }}">Ver</a>
                    <a href="{{ path('app_roles_edit', {'id': role.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No se encontraron roles</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_roles_new') }}">Crear rol</a>
{% endblock %}
